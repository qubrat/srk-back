{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "./build",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": "./source",
		"paths": {
			"@/config/*": ["config/*"],
			"@/controllers/*": ["controllers/*"],
			"@/library/*": ["library/*"],
			"@/middleware/*": ["middleware/*"],
			"@/models/*": ["models/*"],
			"@/routes/*": ["routes/*"]
		}
	}
}
